---
layout: ./base.njk
page_css: proxecto.css
---
<main class="proxecto" data-pagefind-body data-pagefind-filter="SecciÃ³n:Comunidade">
   <header class="page-header">
      <figure>
         {% if img %}
            <img src="{{ img }}"  srcset="{{ img }}, {{ img | replace(".webp", "@2x.webp") }} 2x" alt="Logo de {{title}}" data-pagefind-meta="image[src], image_alt[alt]" >
         {% endif %}
         <figcaption>
            <h1 class="page-title">
               {{title}}
               {% if active %}
                  <span data-pagefind-ignore class="tag is-small" title="Este proxecto crea contido mensualmente">En activo</span>
               {% endif %}
            </h1>
            {{ description | md | safe }}
         </figcaption>
      </figure>
      <aside class="plugin-tags" data-pagefind-meta="Etiquetas: {{ categorias.tags | channelTags(tags) | join(' | ', 'name') }}">
         {% for tag in categorias.tags | channelTags(tags) %}
            <a href="/comunidade/?{{ tag.id }}=on" class="button is-secondary is-small" style="--background: {{tag.color}}">
               {{ tag.name }}
            </a>
         {% endfor %}
      </aside>
   </header>
   <aside class="social-links">
      <ul>
         {% for rede, ligazon in redes %}
            <li  class="social-link-{{rede}}">
               <a target="_blank" href="{{ ligazon }}" title="{{ rede }}" >
                  <img src="/icons/social/{{ rede }}.svg" alt="{{ rede }}" inline>
               </a>
            </li>
         {% endfor %}
      </ul>
   </aside>
   <article>
      {{ content | safe }}
   </article>

   {# <iframe 
      src="https://www.ivoox.com/player_es_podcast_1207119_zp_1.html" 
